{
    "manifest_version": 3,
    "name": "Drag & Translate Word List",
    "version": "1.0",
    "permissions": ["storage", "activeTab", "notifications"],
    "background": {
      "service_worker": "js/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["js/content.js"]
      }
    ],
    "action": {
      "default_popup": "html/popup.html",
      "default_icon": "icon.png"
    }
  }